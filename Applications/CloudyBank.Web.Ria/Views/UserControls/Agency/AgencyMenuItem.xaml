<UserControl x:Class="CloudyBank.Web.Ria.UserControls.AgencyMenuItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50" d:DesignWidth="120">

    <Border Background="{StaticResource LimeBrush}" Margin="3">


        <Grid Margin="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="MenuImage" Stretch="Fill" HorizontalAlignment="Left" Width="40"/>
            <HyperlinkButton x:Name="MenuHyperlinkButton" Grid.Column="1" VerticalAlignment="Center">
                <HyperlinkButton.Content>
                    <TextBlock x:Name="MenuTextBox" TextWrapping="Wrap" Foreground="White"></TextBlock>
                </HyperlinkButton.Content>
            </HyperlinkButton>

        </Grid>

    </Border>
</UserControl>
